<%- include("./partials/header") %>
<%- include("./partials/nav") %>

  <div class="w-full flex flex-col items-center justify-center">
    <div class="md:w-[70%] px-3 font-semibold py-2 flex flex-col items-center justify-center gap-5 mt-5">
      <%allBlogs.forEach((blogs)=>{%>

        <div
          class="w-[100%] font-semibold rounded border shadow-xl py-2 px-2 md:flex items-center justify-start mt-5">
          <h1 class="md:hidden py-2 text-3xl flex items-center justify-between w-full">
            <div>
              <%=blogs.blogTitle.slice(0,30)%>
            </div>
          </h1>
          <img class="md:w-[15vw] lg:w-[25vw] h-full object-cover rounded" src="<%=blogs.blogPoster%>" alt="">
          <div class="h-full w-full px-5 py-2 flex flex-col items-start justify-between gap-3">
            <div class="w-full">
              <h1 class="max-sm:hidden text-3xl flex items-center justify-between w-full">
                <div>
                  <%=blogs.blogTitle.slice(0,30)%>
                </div>
              </h1>
              <span class="p-1 font-normal text-gray-500"><%= blogs.createdAt?.toString().slice(0,15) %></span>
              
            </div>
            <p class="text-gray-600 font-[400]">
              <%=blogs.blogContent.slice(0,250)%>....
            </p>
            <div class="w-full flex justify-between">
              <span>Comments: <%=blogs.comments.length%></span>
              <a class="text-blue-600 hover:text-blue-700" href="/blogReadMore/<%=blogs._id%>">Read more..</a>
            </div>
          </div>
        </div>

        <%})%>

    </div>
  </div>

<%- include("./partials/footer") %>
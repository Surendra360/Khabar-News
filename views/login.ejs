<%- include("./partials/header") %>
    <%- include("./partials/nav") %>

        <div class="w-[100%] flex flex-col items-center justify-center mt-10 pb-10">
            <div >
                <h1 class="text-2xl font-bold border-2xl-black">User Login</h1>
            </div>
            <div class="md:w-[60%] relative z-9 w-full bg-teal-50 rounded-xl border shadow-xl p-5 md:flex items-center justify-center mt-10">
                <div class="md:w-[50%] max-sm:absolute z-1">
                    <img class="w-[100%]" src="/images/login.png" alt="">
                </div>

                <form class="relative z-5 md:w-[40%] p-5 flex flex-col gap-5" action="/users/login" method="post">
                    <div class="flex flex-col gap-1">
                        <label>Username</label>
                        <input class="border-b border-gray-400 bg-[transparent] p-2 outline-0" type="text" name="username" placeholder="abc123">
                    </div>
                    <div class="flex flex-col gap-1">
                        <label>Password</label>
                        <input class="border-b border-gray-400 bg-[transparent] p-2 outline-0" type="Password" name="password" placeholder="********">
                    </div>
                    <a href="/">Forgot password ?</a>
                      
                    <button class="mt-5 bg-blue-500 py-2 rounded text-white font-semibold hover:bg-blue-600">Login</button>

                    <p>Don't have account - <a class="text-blue-600 hover:text-blue-700" href="/register">Register now</a></p>
                </form>
            </div>
        </div>

        <%- include("./partials/footer") %>
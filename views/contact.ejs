<%- include("./partials/header") %>
    <%- include("./partials/nav") %>

        <div class="w-[100%] flex flex-col items-center justify-center mt-10 pb-10">
            <div >
                <h1 class="text-2xl font-bold border-2xl-black">Contact Us</h1>
            </div>
            <div class="md:w-[80%] bg-teal-50 rounded-xl border shadow-xl p-5 md:flex items-center justify-center mt-10">
                <div class="md:w-[50%]">
                    <img class="w-[100%]" src="/images/login.png" alt="">
                </div>

                <div class="md:w-[50%]">
                    <form class="flex flex-col gap-5" action="/users/contact" method="post">
                        <div class="flex flex-col gap-1">
                            <label>Full Name</label>
                            <input class="border-b border-gray-400 bg-teal-50 p-2 outline-0" type="text" name="name" placeholder="abc123">
                        </div>
                        <div class="flex flex-col gap-1">
                            <label>Email</label>
                            <input class="border-b border-gray-400 bg-teal-50 p-2 outline-0" type="email" name="email" placeholder="a@gmail.com">
                        </div>
                        <div class="flex flex-col gap-1">
                            <label>Enter somthing..</label>
                            <textarea class="border border-gray-400 bg-teal-50 p-2" type="text" rows="5" name="description"></textarea>
                        </div>
                        <button class="mt-5 bg-blue-500 py-2 rounded text-white font-semibold hover:bg-blue-600">Send</button>
                    </form>
                </div>
                
            </div>
        </div>

        <%- include("./partials/footer") %>
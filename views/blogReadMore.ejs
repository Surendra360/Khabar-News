<%- include("./partials/header") %>
  <%- include("./partials/nav") %>
    <div class="w-[100%] md:px-20 px-5 flex flex-col items-center justify-center gap-5 mt-10">
      <div class="md:w-1/2">
        <h1 class="text-4xl w-full font-semibold">
          <%=blogData.blogTitle%>
        </h1>
        <div class="w-full font-semibold py-2 px-2 flex flex-col items-center justify-center mt-5">
          <div class=" h-full w-full  items-start justify-top gap-5">
            <img class="w-full h-full object-cover rounded" src="<%=blogData.blogPoster%>" alt="">
            <span class="p-1 font-normal text-gray-500">
              <%= blogData.createdAt?.toString().slice(0,15) %>
            </span>

          </div>
          <div class="mt-10">
            <p class="text-gray-600 font-normal">
              <%=blogData.blogContent%>
            </p>
          </div>

        </div>
        <div class=" py-10">
          <form action="/users/comment/<%=blogData._id%>" method="post" class="flex items-center gap-5">
            <input name="comment" type="text" placeholder="Write here...." class="bg-green-50 px-3 py-1 outline-none w-full border border-gray-600 rounded-full">
            <button class="px-4 py-1 border border-gray-600 rounded-full font-semibold bg-blue-200 hover:bg-blue-600 hover:text-white">Post</button>
          </form>

          <div class="allComment mt-4 flex flex-col gap-3">
            <% blogData.comments.forEach((elem)=>{%>
                <div class="singlecomment bg-white w-2/3 rounded-[50px] p-1 flex items-center gap-3">
                  <div class="profile">
                    
                    <% if (elem.postedBy) { %>
                      <img class="w-[2rem] h-[2rem] bg-red-300 rounded-full" src="<%= elem.postedBy.profileImage %>" alt="">
                    <% } else { %>
                      <img class="w-[2rem] h-[2rem] bg-red-300 rounded-full" src="" alt="">
                    <% } %>
                  </div>
                  
                  <h1 ><%= elem.comment%></h1>
                </div>
              <%})%>
        </div>

        </div>
      </div>
      <!-- <div class="flex items-center justify-center gap-10 mt-10">
  <a class=" px-3 py-1 bg-blue-500 text-white font-semibold rounded" href="/">Home</a>
  <a class=" px-3 py-1 bg-blue-500 text-white font-semibold rounded" href="/users/profile">Profile</a>
</div> -->
    </div>
    <%- include("./partials/footer") %>